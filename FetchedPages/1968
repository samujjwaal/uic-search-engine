<script type="text/javascript">
    function ShowHide(elementId)
    {
        var element = document.getElementById(elementId);
        if(element.style.display != "block")
            element.style.display = "block";
        else
            element.style.display = "none";
    }
    function ShowPersonRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = ""; // using table-row here breaks IE6/7
    }
    function ShowLinkRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = ""; // using table-row here breaks IE6/7
    }
    function HideLinkRow(elementId)
    {
        var element = document.getElementById(elementId);
        element.style.display = "none";
    }

    Tipped.create(".tooltip", {
        position: 'right',
        showOn: 'focus',
        hideOn: 'blur'
    });

    
    /* Must follow select2 script because of id change */
    Tipped.create('#s2id_location_of_incident', '', {
         position: 'right'
    });

    $('#time_of_incident').timepicker({
        'scrollDefault': 'now',
        'step': '15',
        'timeFormat': 'g:i A'
    });

    // jquery_filer for file uploads
    $('#filer_input').filer({
        limit: 30,
        maxSize: 1000,
        changeInput: true,
        showThumbs: true,
        addMore: true,
        captions: {
            button: "Choose Files",
            feedback: "Choose files to upload",
            feedback2: "file(s) selected",
            drop: "Drop file here to upload",
            removeConfirmation: "Are you sure you want to remove this file?",
            errors: {
                filesLimit: "Only {{fi-limit}} files are allowed to be uploaded.",
                filesType: "This type of file cannot be uploaded.",
                filesSize: "{{fi-name}} is too large. Your total upload cannot exceed {{fi-maxSize}} MB.",
                filesSizeAll: "The files you've chosen are too large. Your total upload cannot exceed {{fi-maxSize}} MB."
            }
        }
    });

    $(".select2-selection").addClass("max_foundation");

    /* Makes Abide work on select2 - triggers after the native scripts work */
    $("#location_of_incident").on("invalid.zf.abide", function(ev,el) {
        if($("#location_of_incident").hasClass("is-invalid-input"));
            $("#lbl_location_of_incident").addClass("is-invalid-label");
    });
    $("#location_of_incident").on("valid.zf.abide", function(ev,frm) {
        if($("#location_of_incident").hasClass("is-invalid-input"));
            $("#lbl_location_of_incident").removeClass("is-invalid-label");
    });

    /* Makes Abide work on radio buttons - triggers after the native scripts work */
    $(".radio-group").on("invalid.zf.abide", function(ev,el) {
        $(this).find("input").each(function (i) {
            if($(this).hasClass("is-invalid-input")) {
                $(this).closest("fieldset").find("legend").addClass("is-invalid-label");
                $(this).closest("fieldset").find('span.form-error').addClass("is-visible");
            }
        });
    });
    $(".radio-group").on("valid.zf.abide", function(ev,frm) {
        $(this).find("input").each(function (i) {
            if(!$(this).hasClass("is-invalid-input")) {
                $(this).closest("fieldset").find("legend").removeClass("is-invalid-label");
                $(this).closest("fieldset").find('span.form-error').removeClass("is-visible");
            }
        });
    });

    $('input, textarea, select').on("change.zf.abide", function(ev,elem) {
        var invalid_fields = $('form').find('[data-invalid]');
        if (invalid_fields.length == 0)
            $('.alert.callout').addClass('hide');
        else
            $('.alert.callout').removeClass('hide');
    });

    /* Makes form scroll to first invalid entry */
    $('form').on('forminvalid.zf.abide', function () {
        var invalid_fields = $(this).find('[data-invalid]');

        $('html, body').animate({
            scrollTop: $(invalid_fields[0]).offset().top - 40
        }, 1000, function() {
            $(invalid_fields[0]).focus();  /*for putting focus on the first invalid field*/
        });
    });

    // 11/18/19: HTML5 input type=date detection
    var isDateSupported = function () {
        var input = document.createElement('input');
        var value = 'a';
        input.setAttribute('type', 'date');
        input.setAttribute('value', value);
        return (input.value !== value);
    };
    if (isDateSupported()) {
        $('#lbl_date_of_incident').append('<span class="show-for-sr">Format is MM/DD/YYYY.</span>');
    }
    if (!isDateSupported()) {
        $('#lbl_date_of_incident').append('<br>Format is YYYY-MM-DD.');
    }


</script>
